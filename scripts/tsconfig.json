{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2016",
    "module": "esnext",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": [
    "../lib/**/*.d.ts",
    "../lib/**/*.ts",
    "../lib/**/*.js",
    "../lib/**/*.svelte"
  ],
  "exclude": ["node_modules/*"]
}
