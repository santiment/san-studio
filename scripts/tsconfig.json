{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2016",
    "module": "esnext",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "sourceMap": true,
    "sourceRoot": "../src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "declaration": true,
    "paths": {
      "san-webkit/lib/*": ["../node_modules/san-webkit/lib/*"]
    }
  },
  "include": ["../lib/**/*.d.ts", "../lib/**/*.ts", "../lib/**/*.js", "../lib/**/*.svelte"],
  "exclude": ["node_modules/*", "../lib/**/*.test.js"]
}
